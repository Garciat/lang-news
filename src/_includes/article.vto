<div class="article-header">
  <h1>{{ title }}</h1>
  <div class="article-meta">
    <span class="language-badge">{{ language }}</span>
    <span>ðŸ“… {{ date |> date("HUMAN_DATE") }}</span>
    {{ if version }}
    <span>ðŸ”– Version {{ version }}</span>
    {{ /if }}
